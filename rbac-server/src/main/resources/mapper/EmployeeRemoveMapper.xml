<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rbac.mapper.EmployeeRemoveMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.rbac.pojo.EmployeeRemove">
        <id column="id" property="id" />
        <result column="employee_id" property="employeeId" />
        <result column="before_department_id" property="beforeDepartmentId" />
        <result column="after_department_id" property="afterDepartmentId" />
        <result column="before_position_id" property="beforePositionId" />
        <result column="after_position_id" property="afterPositionId" />
        <result column="remove_date" property="removeDate" />
        <result column="reason" property="reason" />
        <result column="remark" property="remark" />
        <result column="is_delete" property="isDelete" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <resultMap id="EmployeeRemove" type="com.example.rbac.pojo.EmployeeRemove" extends="BaseResultMap">
        <association property="employee" javaType="com.example.rbac.pojo.Employee">
            <id column="eid" property="id" />
            <result column="ename" property="name" />
            <result column="ework_id" property="workId" />
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, employee_id, before_department_id, before_position_id, after_department_id, after_position_id, remove_date, reason, remark, is_delete, gmt_create, gmt_modified
    </sql>

    <select id="getAllEmployeeRemove" resultMap="EmployeeRemove">
        SELECT
            er.*, e.id AS eid,
            e.`name` AS ename,
            e.work_id AS ework_id
        FROM
            t_employee_remove er,
            t_employee e
        WHERE
            e.id = er.employee_id
        AND e.is_delete = FALSE
        AND er.is_delete = FALSE
        <if test="null!=remove.beforeDepartmentId">
            AND er.before_department_id = #{remove.beforeDepartmentId}
        </if>
        <if test="null!=remove.afterDepartmentId">
            AND er.after_department_id = #{remove.afterDepartmentId}
        </if>
        <if test="null!=remove.beforePositionId">
            AND er.before_position_id = #{remove.beforePositionId}
        </if>
        <if test="null!=remove.afterPositionId">
            AND er.after_position_id = #{remove.afterPositionId}
        </if>
        <if test="null!=localDate and ''!=localDate">
            AND date_format(er.remove_date,'%Y-%m-%d') LIKE CONCAT('%',#{localDate},'%')
        </if>
        ORDER BY e.id
    </select>
</mapper>
