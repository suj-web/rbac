            <result column="emp_name" property="name" />
            <result column="emp_work_id" property="workId" />
            <association property="position" javaType="com.example.rbac.pojo.Position">
                <result column="pos_name" property="name" />
            </association>
            <association property="department" javaType="com.example.rbac.pojo.Department">
                <result column="dep_name" property="name" />
            </association>
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, employee_id, punch_in_time, punch_out_time, work_attendance_time, off_duty_attendance_time, personal_leave, sick_leave, absenteeism, is_delete, gmt_create, gmt_modified
    </sql>

