<!--    人事管理-员工考勤-查询员工考勤信息-->
    <select id="getAttendances" resultMap="AttendanceResultMap">
        SELECT
            att.*, emp.`name` AS emp_name,
            emp.work_id AS emp_work_id,
            dep.`name` AS dep_name,
            pos.`name` AS pos_name
        FROM
            t_attendance att,
            t_employee emp,
            t_department dep,
            t_position pos
        WHERE
            emp.is_delete = FALSE
        AND att.is_delete = FALSE
        AND att.employee_id = emp.id
        AND emp.position_id = pos.id
        AND emp.department_id = dep.id
        <if test="null!=depId">
            AND dep.id = #{depId}
        </if>
        <if test="null!=beginDateScope and 2==beginDateScope.length">
            AND att.gmt_create BETWEEN #{beginDateScope[0]} AND #{beginDateScope[1]}
        </if>
        ORDER BY att.id
    </select>

    <select id="getAttendanceForExcel" resultMap="AttendanceResultMap">
        SELECT
            att.*, emp.`name` AS emp_name,
            emp.work_id AS emp_work_id,
            dep.`name` AS dep_name,
            pos.`name` AS pos_name
        FROM
            t_attendance att,
            t_employee emp,
            t_department dep,
            t_position pos
        WHERE
            emp.is_delete = FALSE
        AND att.is_delete = FALSE
        AND att.employee_id = emp.id
        AND emp.position_id = pos.id
        AND emp.department_id = dep.id
        <if test="null!=dateScope and 2==dateScope.length">
            AND att.gmt_create BETWEEN #{dateScope[0]} AND #{dateScope[1]}
        </if>
        ORDER BY att.id
    </select>
