<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rbac.mapper.LoginLogMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.rbac.pojo.LoginLog">
        <id column="session_id" property="sessionId" />
        <result column="name" property="name" />
        <result column="ip" property="ip" />
        <result column="address" property="address" />
        <result column="browser" property="browser" />
        <result column="os" property="os" />
        <result column="type" property="type" />
        <result column="oper_info" property="operInfo" />
        <result column="is_delete" property="isDelete" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        session_id, name, ip, address, browser, os, `type`, oper_info, is_delete, gmt_create, gmt_modified
    </sql>

    <select id="getLoginLogs" resultMap="BaseResultMap">
        SELECT
            *
        FROM
            t_login_log ll
        WHERE ll.is_delete = FALSE
        <if test="null != loginLog.ip and '' != loginLog.ip">
            AND ll.ip = #{loginLog.ip}
        </if>
        <if test="null != loginLog.name and '' != loginLog.name">
            AND ll.`name` LIKE concat('%',#{loginLog.name},'%')
        </if>
        <if test="null != loginLog.type">
            AND ll.`type` = #{loginLog.type}
        </if>
        <if test="null != localDateTimeScope and 2 == localDateTimeScope.length">
            AND ll.gmt_create BETWEEN #{localDateTimeScope[0]} AND #{localDateTimeScope[1]}
        </if>
        ORDER BY ll.gmt_create DESC
    </select>
</mapper>
