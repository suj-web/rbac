<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rbac.mapper.EmployeeDataMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.rbac.pojo.EmployeeData">
        <id column="id" property="id" />
        <result column="employee_id" property="employeeId" />
        <result column="contract_path" property="contractPath" />
        <result column="id_card_path" property="idCardPath" />
        <result column="medical_report_path" property="medicalReportPath" />
        <result column="degree_certificate_path" property="degreeCertificatePath" />
        <result column="offer_path" property="offerPath" />
        <result column="resume_path" property="resumePath" />
        <result column="is_delete" property="isDelete" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <resultMap id="EmpDataResultMap" type="com.example.rbac.pojo.EmployeeData" extends="BaseResultMap">
        <association property="employee" javaType="com.example.rbac.pojo.Employee">
            <result column="name" property="name" />
            <result column="workId" property="workId" />
            <association property="department" javaType="com.example.rbac.pojo.Department">
                <result column="depName" property="name" />
            </association>
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, employee_id, contract_path, id_card_path, medical_report_path, degree_certificate_path, offer_path, resume_path, is_delete, gmt_create, gmt_modified
    </sql>

    <select id="getAllEmpData" resultMap="EmpDataResultMap">
        SELECT
            ed.*, emp.work_id AS workId,
            emp.`name` AS `name`,
            dep.`name` AS depName
        FROM
            t_employee_data ed,
            t_employee emp,
            t_department dep
        WHERE
            ed.is_delete = FALSE
        AND emp.is_delete = FALSE
        AND ed.employee_id = emp.id
        AND emp.work_state = '在职'
        AND emp.department_id = dep.id
        <if test="null != name and '' != name">
            AND emp.`name` LIKE concat('%',#{name},'%')
        </if>
        <if test="null != depId">
            AND dep.id = #{depId}
        </if>
        ORDER BY ed.id
    </select>
</mapper>
