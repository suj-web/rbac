<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rbac.mapper.SysMsgMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.rbac.pojo.SysMsg">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="type" property="type" />
        <result column="creator" property="creator" />
        <result column="enabled" property="enabled" />
        <result column="is_delete" property="isDelete" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, content, type, creator, enabled, is_delete, gmt_create, gmt_modified
    </sql>

    <select id="getAllSystemMessage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_sys_msg sm
        WHERE
            sm.is_delete = FALSE
        <if test="null != sysMsg.title and '' != sysMsg.title">
            AND sm.title LIKE concat('%',#{sysMsg.title},'%')
        </if>
        <if test="null != sysMsg.creator and '' != sysMsg.creator">
            AND sm.creator LIKE concat('%',#{sysMsg.creator},'%')
        </if>
        <if test="null != sysMsg.type">
            AND sm.type = #{sysMsg.type}
        </if>
    </select>
</mapper>
