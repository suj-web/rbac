<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rbac.mapper.AppraiseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.rbac.pojo.Appraise">
        <id column="id" property="id" />
        <result column="employee_id" property="employeeId" />
        <result column="app_date" property="appDate" />
        <result column="app_result" property="appResult" />
        <result column="app_content" property="appContent" />
        <result column="remark" property="remark" />
        <result column="is_delete" property="isDelete" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <resultMap id="Appraise" type="com.example.rbac.pojo.Appraise" extends="BaseResultMap">
        <association property="employee" javaType="com.example.rbac.pojo.Employee">
            <id column="eid" property="id" />
            <result column="ename" property="name" />
            <result column="ework_id" property="workId" />
            <association property="department" javaType="com.example.rbac.pojo.Department">
                <result column="dep_name" property="name" />
            </association>
        </association>
    </resultMap>

    <resultMap id="AppraiseRankResultMap" type="com.example.rbac.pojo.Appraise" extends="BaseResultMap">
        <association property="employee" javaType="com.example.rbac.pojo.Employee">
            <id column="eid" property="id" />
            <result column="ename" property="name" />
            <result column="ework_id" property="workId" />
            <association property="department" javaType="com.example.rbac.pojo.Department">
                <result column="dep_name" property="name" />
            </association>
        </association>
    </resultMap>

    <resultMap id="ChartResultMap" type="com.example.rbac.pojo.RespChartBean">
        <result column="name" property="name" />
        <result column="value" property="value" />
        <result column="average" property="average" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, employee_id, app_date, app_result, app_content, remark, is_delete, gmt_create, gmt_modified
    </sql>

    <select id="getAllAppraise" resultMap="Appraise">
        SELECT
            ap.*, e.id AS eid,
            e.`name` AS ename,
            e.work_id AS ework_id,
            dep.name AS dep_name
        FROM
            t_appraise ap,
            t_employee e,
            t_department dep
        WHERE
            e.id = ap.employee_id
        AND e.is_delete = FALSE
        AND ap.is_delete = FALSE
        AND e.department_id = dep.id
        <if test="null != depId">
            AND e.department_id = #{depId}
        </if>
        <if test="null!=name and ''!=name">
            AND e.`NAME` LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="null!=localDate and ''!=localDate">
            AND date_format(ap.app_date,'%Y-%m-%d') LIKE CONCAT('%',#{localDate},'%')
        </if>
        ORDER BY e.id
    </select>

<!--    考评得分排名-->
    <select id="getAppraiseRank" resultMap="Appraise">
        SELECT
            ap.*, e.id AS eid,
            e.`name` AS ename,
            e.work_id AS ework_id,
            dep.name AS dep_name
        FROM
            t_appraise ap,
            t_employee e,
            t_department dep
        WHERE
            e.id = ap.employee_id
        AND e.is_delete = FALSE
        AND ap.is_delete = FALSE
        AND e.department_id = dep.id
        <if test="null != depId">
            AND e.department_id = #{depId}
        </if>
        <if test="null != localDate and '' != localDate">
            AND date_format(ap.app_date,'%Y-%m-%d') LIKE CONCAT('%',#{localDate},'%')
        </if>
        ORDER BY ap.app_result DESC
    </select>

<!--    部门平均考评得分统计-->
    <select id="getDepartmentAverageScore" resultMap="ChartResultMap">
        SELECT
            dep.name AS `name`,
            SUM(ap.app_result) AS `average`
        FROM
            t_appraise ap,
            t_employee e,
            t_department dep
        WHERE
        e.id = ap.employee_id
        AND e.is_delete = FALSE
        AND ap.is_delete = FALSE
        AND e.department_id = dep.id
        <if test="null != localDate and '' != localDate">
            AND date_format(ap.app_date,'%Y-%m-%d') LIKE CONCAT('%',#{localDate},'%')
        </if>
        GROUP BY dep.name
    </select>
</mapper>
